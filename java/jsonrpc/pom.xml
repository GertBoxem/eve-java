<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>jsonrpc</artifactId>
	<groupId>com.almende</groupId>
	<version>1.0.0</version>

	<organization>
		<name>Almende BV, the Netherlands</name>
		<url>http://www.almende.com/</url>
	</organization>

	<developers>
		<developer>
			<name>Jos de Jong</name>
			<id>jos</id>
			<email>jos@almende.org</email>
			<organization>Almende BV, the Netherlands</organization>
			<url>http://www.almende.org/</url>
			<timezone>1</timezone>
		</developer>
		<developer>
			<name>Ludo Stellingwerff</name>
			<id>ludo</id>
			<email>ludo@almende.org</email>
			<organization>Almende BV, the Netherlands</organization>
			<url>http://www.almende.org/</url>
			<timezone>1</timezone>
		</developer>
	</developers>

	<name>Almende JSONRPC</name>
	<url>http://almende.github.com/</url>

	<properties>
		<jackson.version>2.0.0</jackson.version>
		<wagon-scm.version>2.2</wagon-scm.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${jackson.version}</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<name>Almende EVE repository</name>
			<id>eve</id>
			<url>https://raw.github.com/almende/eve/master/repo</url>
		</repository>
	</repositories>

	<distributionManagement>
		<downloadUrl>https://raw.github.com/almende/eve/master/repo</downloadUrl>
		<repository>
			<id>eve-github</id> <!-- ${basedir} <url>scm:git:ssh://git@github.com:almende/eve.git</url> -->
			<url>file:///${basedir}/../../repo/</url>
		</repository>
	</distributionManagement>

	<build>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-scm</artifactId>
				<version>${wagon-scm.version}</version>
			</extension>
		</extensions>
	</build>
</project>